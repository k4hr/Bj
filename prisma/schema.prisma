// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  /// Telegram chat_id (для приватных чатов = user_id)
  id           BigInt   @id
  createdAt    DateTime @default(now())
  username     String?
  firstName    String?
  lastName     String?
  languageCode String?

  characters   Character[]
}

model Character {
  id          String   @id @default(cuid())
  userId      BigInt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  photoFileId String
  description String?
  createdAt   DateTime @default(now())
}
