// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Persona {
  id          String   @id @default(cuid())
  chatId      String   // Telegram chat_id как строка, чтобы не париться с bigint
  name        String
  photoFileId String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([chatId])
}
